@import url('https://fonts.googleapis.com/css2?family=Righteous&family=Sarala:wght@400;700&display=swap');

section.container h1{
	font-size:30px;
	text-align:center;
	padding-top:25px;
	padding-bottom:25px;
}

section.container div#formulario{
	width:1000px;
	height:950px;
    background-color:orange;
    font-size:20px;
	margin:auto;
    justify-content:center;
}

#check{
    display:inline-block;
}

fieldset{
    border:none;
}

input, select, textarea, button{
    border-radius:5px;
}

.campo{
    margin-bottom:25px;
}

.campo label{
    margin-bottom:10px;
    display:block;
}

fieldset.grupo .campo{
    float:left;
    margin-right:15px;
}

.campo input[type="text"], .campo input[type="email"], .campo select, .campo textarea{
    padding:10px;
    border:1px solid green;
    box-shadow:2px 2px 2px green;
    display:block;
	/*margin:auto;*/
}

.botao{
    font-size:30px;
    background:green;
	display:block;
	margin:auto;
	margin-top:55px;
    border:none;
    color:white;
    padding: 0.2em 0.6em;
    transform: translate(-50%, -50%);
}

.botao:hover{
    background:green;
    text-shadow:none;
}

.botao, select{
    cursor:pointer;
}